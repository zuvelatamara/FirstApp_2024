<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".CategoryActivity">
    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Categories"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="26sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wine"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:src="@drawable/wine"
            />

        <ImageView
            android:id="@+id/juices"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:src="@drawable/juce" />

        <ImageView
            android:id="@+id/vinegars"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:src="@drawable/vinegar" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_category_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_category_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/cosmetics"
            android:layout_width="110dp"
            android:layout_height="85dp"
            android:src="@drawable/cosmetic" />

        <ImageView
            android:id="@+id/teas"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:src="@drawable/tea" />

        <ImageView
            android:id="@+id/honey"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:src="@drawable/honey" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_category_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_category_layout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/spices"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:src="@drawable/spice" />

        <ImageView
            android:id="@+id/fruits"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:src="@drawable/fruits" />

        <ImageView
            android:id="@+id/vegetables"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:src="@drawable/vegetable" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_category_layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_category_layout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/plants"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:src="@drawable/plants" />

        <ImageView
            android:id="@+id/medicine"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:src="@drawable/medicine" />

        <ImageView
            android:id="@+id/woodhouses"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:src="@drawable/woodhouse" />

    </LinearLayout>

</RelativeLayout>